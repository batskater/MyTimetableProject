<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff86edff"
    android:id="@+id/RelativeLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Design"
        android:id="@+id/textView"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="60dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/btAdd"
        android:layout_marginStart="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timetable"
        android:id="@+id/textView3"
        android:textSize="60dp"
        android:textStyle="bold|italic"
        android:textColor="#ffff0000"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/btAdd" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/write"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView3"
        android:layout_above="@+id/btAdd"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Show Timetable"
        android:id="@+id/btShow"
        android:textSize="25dp"
        android:background="#ff0000ff"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Start design"
        android:id="@+id/btAdd"
        android:textSize="25dp"
        android:background="#ffffff00"
        android:textColor="@android:color/black"
        android:layout_above="@+id/btShow"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="false"
        android:onClick="buttonClicked" />

</RelativeLayout>
